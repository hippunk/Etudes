<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
           <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/euros_label" /> 
        
        	<EditText android:id="@+id/edit_euros"
        android:inputType="numberDecimal"
	    android:layout_weight="1"
	    android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/euros_label" />
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
           
           <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taux_label" /> 
        
        	<EditText android:id="@+id/edit_taux"
        android:enabled="true"
        android:focusable="true"
        android:inputType="numberDecimal"
        android:layout_weight="0.5"
	    android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/taux_label" />
        	
        	<Spinner android:id="@+id/spinner_taux"
        android:layout_weight="0.5"
	    android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/taux_label" />

    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
           
           <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_label" /> 
        
           <EditText android:id="@+id/edit_result"
        android:enabled="false"
        android:focusable="false"
        android:inputType="numberDecimal"
	    android:layout_weight="1"
	    android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/result_label" />
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
           
			<Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/bouton"
	    android:onClick="convert" />
    </LinearLayout>

</LinearLayout>